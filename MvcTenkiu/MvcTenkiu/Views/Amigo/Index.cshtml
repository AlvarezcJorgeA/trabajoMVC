@model IEnumerable<MvcTenkiu.Models.AMIGO>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Amigos</h2>

<p>
    @Html.ActionLink("Seguir a un Amigo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AM_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USUARIO.US_NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AM_US_IDA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AM_TIPO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AM_FECHA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AM_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USUARIO.US_NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AM_US_IDA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AM_TIPO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AM_FECHA)
        </td>
        <td>
            @Html.ActionLink("Dejar de Seguir", "Delete", new { id=item.AM_ID })
        </td>
    </tr>
}

</table>
