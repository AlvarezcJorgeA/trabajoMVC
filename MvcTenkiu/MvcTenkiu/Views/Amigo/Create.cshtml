@model MvcTenkiu.Models.AMIGO

@{
    ViewBag.Title = "Create";
}

<h2>Busca a un amigo</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AMIGO</legend>

      <div class="editor-label">
            @Html.LabelFor(model => model.US_ID, "USUARIO")
        </div>
        <div class="editor-field">
            @Html.DropDownList("US_ID", String.Empty)
            @Html.ValidationMessageFor(model => model.US_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AM_US_IDA)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AM_US_IDA)
            @Html.ValidationMessageFor(model => model.AM_US_IDA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AM_TIPO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AM_TIPO)
            @Html.ValidationMessageFor(model => model.AM_TIPO)
        </div>

       <p>
            <input type="submit" value="Seguir a tu Amigo" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
